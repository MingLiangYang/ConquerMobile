<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/drawer_layout">
    <!-- The main content view -->
    <!--android.support.v4.widget.DrawerLayout-->


    <TextView
        android:text="TextView"
        android:gravity="center_horizontal"
        android:layout_marginTop="150px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewTimeMain" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/chartinmain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="150px"/>

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barchartmain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="150px"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150px"
        android:gravity="bottom"
        android:id="@+id/buttonbarchartmain"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="PIE"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:id="@+id/piechartbutton"
            android:background="@drawable/bt_layout"
            android:textColor="@color/white"/>



        <Button
            android:text="BAR"
            android:layout_width="0px"
            android:layout_weight="1.0"
            android:layout_height="wrap_content"
            android:id="@+id/barchartbutton"
            android:background="@drawable/bt_layout"
            android:textColor="@color/white"/>

    </LinearLayout>

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/mintcream"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" >
    </ListView>

    <!-- The navigation view -->


</android.support.v4.widget.DrawerLayout>

